@page

@model Bookstore413.Pages.BuyModel

@{
}

<h2>Your Cart</h2>

<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>Book</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Cart.Lines)
        {
            <tr>
                <td class="text-center">@line.Book.Title</td>
                <td class="text-right">$@line.Book.Price</td>
                <td class="text-center">@line.Quantity</td>
                <td class="text-right">$@((line.Quantity * line.Book.Price).ToString())</td>
                <td class="text-center">
                    <form asp-page-handler="Remove" method="post">
                        <input type="hidden" name="BookId" value="@line.Book.BookId" />
                        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                        <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td class="text-right">$@Model.Cart.ComputeTotalSum().ToString()</td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
</div>